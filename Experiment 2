#include <stdio.h>

int main(){
    int a,b, addition, subtraction, multiplication, remainder;
    printf("Enter first and second number : ");
    scanf("%d%d", &a ,&b);
    addition = a+b;
    subtraction = a-b;
    multiplication = a*b;
    remainder = a%b; 
    printf("Addition : %d\n Subtraction : %d\n Multiplication : %d\n Remainder : %d", addition,subtraction,  multiplication, remainder);
    return 0;
}


#include <stdio.h> 

int main(){
    float area, perimeter;
    int radius, length , breadth, side;
    printf("Enter the side of square : ");
    scanf("%d", &side);
    area = side * side;
    perimeter = 4 * side;
    printf("Area is : %f\n Perimeter is : %f\n", area, perimeter);
    printf("Enter radius of circle : ");
    scanf("%d", &radius);
    area = 3.14*(radius*radius);
    perimeter = 2*3.14*radius;
    printf("Area is : %f\n Perimeter is : %f \n", area, perimeter);
    printf("Enter length and breadth of the rectangle : ");
    scanf("%d%d", &length, &breadth);
    area = length * breadth;
    perimeter = 2*(length + breadth);
    printf("Area is : %f\n Perimeter is : %f\n", area, perimeter);
    return 0;
}





#include <stdio.h>
#include <math.h>
int main(){
    float x1, y1, x2, y2, distance;
    printf("Enter the value of x1 and y1 : ");
    scanf("%f%f", &x1, &y1);
    printf("Enter the value of x2 and y2 : ");
    scanf("%f%f", &x2, &y2); 
    distance = sqrt(pow(x2-x1,2) + pow(y2-y1,2));
    printf("Distance between two points is : %f", distance);
    return 0;
} 
