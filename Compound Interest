#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int P,T;
    float CI, Final_amount,R;
    scanf("%d", &P);
    scanf("%f", &R);
    scanf("%d", &T);
    Final_amount = P*(pow((1+R/100),T)); 
    CI = Final_amount-P;
    printf("%.2f", CI);   
    return 0;   
    
}
